<html>
	<head>
		<title></title>
		<link rel="stylesheet" href="/bootstrap.min.css">
	</head>
	<body>
		<div class="container">
			<div class="page-header">
				<h1>Hats Factory</h1>
			</div>
				<% if @listHats.length > 0 %>
				<table class="table table-striped">
					<thead>
						<tr>
							<td>Brand</td>
							<td>Style</td>
						</tr>
					</thead>
					<tbody>
				  		<% @listHats.each do |hat| %>
						<tr>
							<td><%= hat.brand %></td>
							<td><%= hat.style %></td>
							<td><a href="/show/<%= hat.id %>">Show</a></td>
							<td><a href="/edit/<%= hat.id %>">Edit</a></td>
							<td><a href="/delete/<%= hat.id %>">Delete</a></td>
						</tr>
				  		<% end %>
					</tbody>
				</table>
				<% else %>
				<h3>No sombreros!!!</h3>
				<% end %>
				<a href="/new">Create new</a>
		</div>
	</body>
</html>